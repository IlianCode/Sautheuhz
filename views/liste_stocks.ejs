<%- include('header') %>
    <div class="container">
        <!-- Titre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Liste des stocks</h1>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bouton -->
        <div class="row mt-3">
            <div class="col-lg-12 col-sm-12 col-12 text-center">
                <button class="btn btn-primary" style="width: 100%;" onclick="location.href = 'form_stock';">Ajouter du
                    stock</button>
            </div>
        </div>

        <!-- Tableau -->
        <div class="row d-flex justify-content-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <!-- Tableau -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">Médicament</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">En demande</th>
                                    <th scope="col">Stock Effectif </th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% contenu.forEach(function(med,i){ %>
                                <tr>
                                    <td> <%= med.Medicaments_libelle %> </td>
                                    <td><%= med.Stocks_quantite %></td>
                                    
                                    <td><%= contenud[i].stock_necessaire %></td>                                 

                                    <td><%= med.Stocks_quantite - contenud[i].stock_necessaire %> </td>
                                    <td>
                                        <ul class="list-inline m-0">
                                            <li class="list-inline-item">
                                                <button class="btn btn-primary btn-sm rounded-0" type="button"
                                                    data-toggle="modal" data-target="#detail_<%= med.Medicaments_id %>" title="Détails"><i
                                                        class="fa fa-eye"></i></button>
                                            </li>
                                            <li class="list-inline-item">
                                                <button class="btn btn-success btn-sm rounded-0" type="button"
                                                    title="Modifier" onclick="location.href = 'fiche_stock/<%= med.Medicaments_id %>';"><i class="fa fa-edit"></i></button>
                                            </li>
                                            <li class="list-inline-item">
                                                <button class="btn btn-danger btn-sm rounded-0" type="button"
                                                    data-toggle="modal" data-target="#supprimer_<%= med.Medicaments_id %>" title="Supprimer"><i
                                                        class="fa fa-trash"></i></button>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                                <% })%>
                            </tbody>
                        </table>
                        <% contenu.forEach(function(med,i){ %>

                        <!-- Détails -->
                        <div class="modal fade" id="detail_<%= med.Medicaments_id %>">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Détails stoick n°</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p><b>Médicament : </b> <%= med.Medicaments_libelle %></p>
                                        <p><b>Stock : </b><%= med.Stocks_quantite %></p>
                                        <p><b>En demande : </b><%= contenud[i].stock_necessaire %></p>
                                        <p><b>Stock à garder : </b><%= med.Stocks_quantite - contenud[i].stock_necessaire %></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Fermer</button>
                                        <button type="button" class="btn btn-primary">Fiche</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Supprimer -->
                        <div class="modal fade" id="supprimer_<%= med.Medicaments_id %>">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Supprimer stock n°</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>
                                            Êtes-vous sûr de vouloir supprimer ce stock ?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Non</button>
                                        <form action="/sautheuhz/delete_stock/<%= med.Medicaments_id %>" method="POST">
                                        <button type="submit" class="btn btn-danger">Oui</button></form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% })%>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
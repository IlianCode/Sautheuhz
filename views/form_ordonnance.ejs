<%- include('header') %>

    <div class="container">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-10 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Ajouter une ordonnance</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <form action="/sautheuhz/form_client" class="container" id="needs-validation" novalidate>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectClient">Client</label>
                            <select class="custom-select d-block form-control" id="selectClient" name="selectClient"
                                required>
                                <option value="" disabled selected>Choisir un client</option>
                                <option value="N">Non binaire</option>
                                <option value="M">Masculin</option>
                                <option value="F">Féminin</option>
                            </select>
                            <div class="invalid-feedback">
                                Veuillez fournir un sexe valide.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectSexe">Médecin</label>
                            <select class="custom-select d-block form-control" id="selectMedecin" name="selectMedecin"
                                required>
                                <option value="" disabled selected>Choisir un médecin</option>
                                <option value="N">Non binaire</option>
                                <option value="M">Masculin</option>
                                <option value="F">Féminin</option>
                            </select>
                            <div class="invalid-feedback">
                                Veuillez fournir un sexe valide.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="education_fields">

                    </div>
                    <div class="col-sm-3 nopadding">
                        <div class="form-group">
                            <input type="text" class="form-control" id="Schoolname" name="Schoolname[]" value=""
                                placeholder="School name">
                        </div>
                    </div>
                    <div class="col-sm-3 nopadding">
                        <div class="form-group">
                            <input type="text" class="form-control" id="Major" name="Major[]" value=""
                                placeholder="Major">
                        </div>
                    </div>
                    <div class="col-sm-3 nopadding">
                        <div class="form-group">
                            <input type="text" class="form-control" id="Degree" name="Degree[]" value=""
                                placeholder="Degree">
                        </div>
                    </div>

                    <div class="col-sm-3 nopadding">
                        <div class="form-group">
                            <div class="input-group">
                                <select class="form-control" id="educationDate" name="educationDate[]">

                                    <option value="">Date</option>
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                </select>
                                <div class="input-group-btn">
                                    <button class="btn btn-success" type="button" onclick="education_fields();"> <span
                                            class="glyphicon glyphicon-plus" aria-hidden="true">+</span> </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>

                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>
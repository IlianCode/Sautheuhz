<%- include('header') %>
    <div class="container">
        <!-- Titre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Liste des pathologies</h1>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bouton -->
        <div class="row mt-3">
            <div class="col-lg-12 col-sm-12 col-12 text-center">
                <button class="btn btn-primary" style="width: 100%;" onclick="location.href = 'form_pathologie';">Ajouter une
                    pathologie</button>
            </div>
        </div>

        <!-- Tableau -->
        <div class="row d-flex justify-content-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <!-- Tableau -->
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-12 col-md-12 mt-3">
                        <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">Action</th>
                                    <th scope="col">Libellé</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% contenu.forEach(function(user){ %>
                                    <tr>
                                        <td>
                                            <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <button class="btn btn-primary btn-sm rounded-0" type="button"
                                                        data-toggle="modal" data-target="#detail_<%= user.Pathologies_id %>"
                                                        title="Détails"><i class="fa fa-eye"></i></button>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-success btn-sm rounded-0" type="button"
                                                        title="Modifier"
                                                        onclick="location.href = '/sautheuhz/fiche_pathologie/<%= user.Pathologies_id %>';"><i
                                                            class="fa fa-edit"></i></button>
                                                </li>
                                                <li class="list-inline-item">

                                                    <button class="btn btn-danger btn-sm rounded-0" type="button"
                                                        data-toggle="modal"
                                                        data-target="#supprimer_<%= user.Pathologies_id %>"
                                                        title="Supprimer"><i class="fa fa-trash"></i></button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </td>
                                        <td><%= user.Pathologies_libelle %>

                                        </td>
                                    </tr>
                                    <% })%>
                            </tbody>
                        </table>
                        <% contenu.forEach(function(user){ %>

                            <!-- Détails -->
                            <div class="modal fade" id="detail_<%= user.Pathologies_id %>">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Détails pathologie n°<%= user.Pathologies_id %>
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p><b>Libellé : </b> <%= user.Pathologies_libelle %>
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Fermer</button>
                                            <button type="button" class="btn btn-primary"
                                                onclick="location.href = 'fiche_pathologie/<%= user.Pathologies_id %>';">Fiche</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            

                            <!-- Supprimer -->
                            <div class="modal fade" id="supprimer_<%= user.Pathologies_id %>">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Supprimer pathologie n°<%= user.Pathologies_id %>
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true" style="cursor: pointer;">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>
                                                Êtes-vous sûr de vouloir supprimer ce pathologie ?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success"
                                                data-dismiss="modal">Non</button>
                                            <form action="/sautheuhz/delete_pathologie/<%= user.Pathologies_id %>"
                                                method="post">
                                                <button type="submit" class="btn btn-danger" name="supp"
                                                    value="supp">Oui</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% })%>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
<%- include('header') %>

    <div class="container">
        <%- include('msgErreur') %>
        <!-- Titre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Modifier le stock n°</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <form action="/sautheuhz/fiche_stock/<%= contenu[0].Medicaments_id %>" method="POST" class="container" id="form_stock" novalidate>
                <!-- médciament et qte-->
                <div class="row">
                    <div class="form-group  col-sm-12 col-xl-6">
                        <label for="inputMed" class="form-label required">Médicament</label>
                        <input type="text" class="form-control" id="inputMed" name="inputMed"
                            placeholder="Nom du médicament" value="<%= contenu[0].Medicaments_libelle %>" required>
                        <div class="invalid-feedback">
                            Veuillez fournir un médicament valide.
                        </div>
                    </div>
                    <div class="form-group col-sm-12 col-xl-6">
                        <label for="inputQte" class="form-label required">Quantité</label>
                        <input type="number" class="form-control" id="inputQte" name="inputQte" placeholder="Quantité"
                            min="2" max="20" value="<%= contenu[0].Medicaments_qte%>" required>
                        <div class="invalid-feedback">
                            Veuillez fournir une quantité valide.
                        </div>
                    </div>
                </div>

                <!-- Validation du formulaire -->
                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>
<%- include('header') %>

    <div class="container">
        <!-- Tittre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Modifier les informations du Medecin n°<%= contenu[0].Mutuelles_id %> </h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <form action="/sautheuhz/fiche_mutuelle/<%= contenu[0].Mutuelles_id %>" method="POST" class="container" id="mutuelle" name="form_mutuelle" novalidate>
                <!-- Nom et prénom -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputNomMutu">Nom</label>
                            <input type="text" class="form-control" id="inputNomMutu" name="inputNomMutu" placeholder="Nom"  
                             value="<%= contenu[0].Mutuelles_nom %>" required>
                        </div>
                    </div>
                </div>

                <!-- Email et tél -->
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="inputEmail"
                            placeholder="Email" value="<%= contenu[0].Mutuelles_mail %>"  required>

                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputTel">Tél</label>
                            <input type="tel" minlength="14" maxlength="14" class="form-control" id="inputTel" name="inputTel" placeholder="Téléphone"
                            value="0<%= contenu[0].Mutuelles_tel %>" required>
                        </div>
                    </div>
                </div>

                <!-- Validation du formulaire -->
                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>
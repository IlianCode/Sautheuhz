<%- include('header') %>

    <div class="container">
        <!-- Tittre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Modifier les informations du Medecin n°<%= contenu[0].Medecins_id %></h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <form action="/sautheuhz/fiche_medecin/<%= contenu[0].Medecins_id%>" method="POST" class="container" id="medecin" name="form_medecin" novalidate>
                <!-- Nom et prénom -->
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputNom">Nom</label>
                            <input type="text" class="form-control" id="inputNom" name="inputNom" placeholder="Nom"
                            onkeyup="this.value = this.value.toUpperCase();"    
                            value="<%= contenu[0].Medecins_nom %>" required>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputPrenom">Prénom</label>
                            <input type="text" class="form-control" id="inputPrenom" name="inputPrenom" 
                            placeholder="Prénom" value="<%= contenu[0].Medecins_prenom %>" required>
                        </div>
                    </div>
                </div>

                <!-- Email et tél -->
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="inputEmail"
                            placeholder="Email" value="<%= contenu[0].Medecins_mail %>" required>

                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputTel">Tél</label>
                            <input type="tel" minlength="14" maxlength="14" class="form-control" id="inputTel" name="inputTel" placeholder="Téléphone"
                            value="0<%= contenu[0].Medecins_tel %>"required>
                        </div>
                    </div>
                </div>

                <!-- No Ordre -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputOrdre">N° ordre</label>
                            <input type="text" class="form-control" id="inputOrdre" name="inputOrdre"
                                placeholder="N° ordre" value="<%= contenu[0].Medecins_noOrdre %>"  required>
                        </div>
                    </div>
                </div>

                <!-- Validation du formulaire -->
                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>